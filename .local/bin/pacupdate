#!/bin/bash

pacman_out=$(checkupdates 2>/dev/null)
aur_out=$(yay -Qua 2>/dev/null)

pacman_updates=0
aur_updates=0

if [ ! -z "$pacman_out" ]; then
    pacman_updates=$(echo "$pacman_out" | wc -l)
fi

if [ ! -z "$aur_out" ]; then
    aur_updates=$(echo "$aur_out" | wc -l)
fi

echo "$pacman_updates.$aur_updates"
